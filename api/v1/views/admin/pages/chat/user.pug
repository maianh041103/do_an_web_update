extends ../../layouts/default.pug
include ../../mixins/box-head

block main 
  .container.my-3 
    .row 
      .col-12 
        +box-head("Danh sách khách hàng")

    .row(data-users-accept=account.id)
      if(users)
        each user in users 
          .col-6 
            div(class="box-user")
              div(class="inner-avatar")
                img(
                  src=(user.avatar)?user.avatar:"https://res.cloudinary.com/debcojldf/image/upload/v1702996836/jfvic7lmkq7ibegorvqt.jpg"
                  alt=user.fullName
                )
              div(class="inner-info")
                div(class="inner-name") #{user.fullName}
                div(class="buttons")
                  a(
                    class="btn btn-sm btn-primary mr-1"
                    href=`/api/v1/admin/chat/detail?token=${account.token}&tokenUser=${user.token}`
                  ) Nhắn tin
        
block script 
  script(src="/js/users.js")